<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title> My Shop </title>

	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Custom Styles -->
	 <link href="/assets/css/style.css" rel="stylesheet">

	 <!-- Custom Styles -->
 	 <link href="/assets/css/style2.css" rel="stylesheet">

</head>

<body>
	<!-- Page  Background  -->
	<header>
		<div class="jumbotron">
			<h2 align="center"> Tweet Sentiment Analysis </h2>
			<h2 align="center"> for <%=data.name%> </h2>

			<form class="field" id="searchform" action="/" method="post">
  			<input type="text" name="text" id="searchterm" placeholder="" />
  			<button type="submit" id="search">search</button>
			</form>

			<script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>


		</div>

	</header>
	<% if(data.error){ %>
		<h2 align="center">Sorry :( an error accured while retrieving the tweets</h2>
	<% }else{ %>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Label</th>
        <th>Score</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0;i<data.text.length;i++){ %>
      <tr>
        <td><%=data.text[i]%></td>
        <td><%=data.label[i]%></td>
        <td><%=data.score[i]%></td>
      </tr>
      <% } %>
    </tbody>
  </table>
	<% } %>



	<!-- jQuery Library -->
	<script type="text/javascript" src="/assets/js/jquery-2.1.0.min.js"></script>
	<!-- Modernizr js -->
	<script type="text/javascript" src="/assets/js/modernizr-2.8.0.min.js"></script>
	<!-- Plugins -->
	<script type="text/javascript" src="/assets/js/plugins.js"></script>
	<!-- Custom JavaScript Functions -->
	<script type="text/javascript" src="/assets/js/functions.js"></script>
	<!-- Custom JavaScript Functions -->
	<script type="text/javascript" src="/assets/js/jquery.ajaxchimp.min.js"></script>

</body>

</html>
